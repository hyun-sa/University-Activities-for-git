<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/divide"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:text="나누기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multi" />

    <Button
        android:id="@+id/multi"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:text="곱하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        android:id="@+id/minus"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:text="빼기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <EditText
        android:id="@+id/num_a"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num_b"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_a" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="359dp"
        android:layout_height="114dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_b">

        <TableRow
            android:layout_width="361dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/input_1"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/input_2"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/input_3"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/input_4"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/input_5"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/input_6"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="6" />

            <Button
                android:id="@+id/input_7"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/input_8"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/input_9"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="9" />

            <Button
                android:id="@+id/input_10"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="0" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/plus"
        android:layout_width="257dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="더하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="계산결과 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divide" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/divide" />

</androidx.constraintlayout.widget.ConstraintLayout>